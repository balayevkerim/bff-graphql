{
  "name": "todo-bff",
  "version": "1.0.0",
  "description": "Todo application with GraphQL BFF and Angular frontend",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "echo 'Server build complete'",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install",
    "test": "jest"
  },
  "keywords": ["graphql", "bff", "angular", "todo", "express"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "apollo-server-express": "^3.12.1",
    "graphql": "^16.8.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0"
  }
} 